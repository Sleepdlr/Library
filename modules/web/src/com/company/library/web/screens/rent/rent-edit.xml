<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://rentEdit.caption"
        focusComponent="form"
        messagesPack="com.company.library.web.screens.rent">
    <data>
        <instance id="rentDc"
                  class="com.company.library.entity.Rent">
            <view extends="_local">
                <property name="customer" view="_minimal"/>
                <property name="book" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="rentDc">
            <column width="350px">
                <pickerField id="customerField" property="customer">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="bookField" property="book">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="rentStartField" property="rentStart"/>
                <dateField id="rentEndField" property="rentEnd"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
